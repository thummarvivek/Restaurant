<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#f0f0f0"
    android:animateLayoutChanges="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:backgroundTint="@color/white"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cimg1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_weight="2"
                    android:src="@drawable/placeimg"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cbooktitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Food name"
                        android:textColor="#001D35"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="18dp" />
                    <View
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Pure Veg"
                        android:textColor="#4DB151"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:drawableLeft="@drawable/foodveg"
                        android:drawablePadding="5dp"
                        android:textStyle="bold"
                        android:textSize="14dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:text="Food"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:text=":-" />

                        <TextView
                            android:id="@+id/cartedition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:textSize="13sp"
                            android:text="name"/>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/gray"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:text="Price"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/black"
                            android:padding="5dp"
                            android:textSize="16sp"
                            android:text=":-" />

                        <TextView
                            android:id="@+id/cartprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="225"
                            android:textColor="@color/black"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:drawableLeft="@drawable/rupees"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:gravity="center">

                <Button
                    android:id="@+id/remove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remove"
                    android:layout_marginLeft="5dp"
                    android:background="@color/bluemaster"
                    android:textColor="@color/red"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                    <Button
                        android:id="@+id/buycard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buy Now"
                        android:layout_marginLeft="5dp"
                        android:background="@color/bluemaster"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>