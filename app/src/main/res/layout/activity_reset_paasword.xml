<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Loginpro.ResetPaasword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Reset Password"
                android:textColor="@color/bblack"
                android:textSize="25dp"
                android:fontFamily="@font/interfont"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:gravity="center"
                android:layout_marginTop="150dp"
                android:backgroundTint="#fff"
                app:cardCornerRadius="30dp"
                android:elevation="50dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:weightSum="4"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/resetpassword"
                            style="@style/edittext"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/filedbordertext"
                            android:layout_weight="1"
                            android:hint="Password"
                            android:inputType="textPassword" />


                        <EditText
                            android:id="@+id/reresetpassword"
                            style="@style/edittext"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/filedbordertext"
                            android:hint="Re-Password"
                            android:layout_weight="1"
                            android:inputType="textPassword" />




                        <Button
                            android:id="@+id/resetbtn"
                            style="@style/btn"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/filedborder"
                            android:text="Reset"
                            android:layout_weight="1"
                            android:textSize="20sp" />


                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/register"
                android:textColor="@color/bblack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Create New Account"
                android:textSize="15sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>