<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightwhite"
    tools:context=".Loginpro.edit_profile">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:elevation="10dp"
        app:expanded="true"
        android:background="@drawable/toolround"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolround"
            android:contentDescription="@string/app_name"
            android:longClickable="true"
            app:titleMargin="10dp"
            app:title="Edit Profile"
            app:titleTextColor="#F3F6FC"/>

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swip"
        android:orientation="vertical">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize">





                <Space
                    android:id="@+id/spaceid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profileid"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/spaceid"
                    android:layout_centerHorizontal="true"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:background="@drawable/profilecircle"
                    app:cardCornerRadius="150dp"
                    android:layout_marginTop="-15dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/profile_dp"
                        android:id="@+id/profiledp"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/uploadbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="140dp"
                    android:backgroundTint="@color/baccup"
                    android:clickable="true"
                    android:contentDescription="@string/next"
                    android:src="@drawable/add"
                    app:borderWidth="3dp"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="265dp"
                    android:layout_marginTop="150dp">

                    <ProgressBar
                        android:id="@+id/imgprogressBar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profilecard"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_height="610dp"
                        app:cardCornerRadius="10dp"
                        android:elevation="15sp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="120dp"
                        android:backgroundTint="#fff">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/mr_dafoe"
                                android:gravity="center"
                                android:text="Edit Profile"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:textStyle="italic" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="#32000000"/>



                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtinput1"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColorHint="@color/gray"
                                app:boxStrokeColor="@color/baccup"
                                app:startIconDrawable="@drawable/user"
                                app:startIconTint="@color/baccup">

                                <EditText
                                    android:id="@+id/username1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:hint="UserName"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:maxLength="30"
                                    android:textColorHint="@color/gray"
                                    android:textStyle="bold"
                                    tools:ignore="SpeakableTextPresentCheck"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtinput2"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColorHint="@color/gray"
                                app:boxStrokeColor="@color/baccup"
                                app:startIconDrawable="@drawable/home"
                                app:startIconTint="@color/baccup">

                                <EditText
                                    android:id="@+id/Address2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:hint="Address"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:textColorHint="@color/gray"
                                    android:textStyle="bold"
                                    tools:ignore="SpeakableTextPresentCheck"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtinput03"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColorHint="@color/gray"
                                app:boxStrokeColor="@color/baccup"
                                app:startIconDrawable="@drawable/phone"
                                app:startIconTint="@color/baccup">

                                <EditText
                                    android:id="@+id/phone02"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:hint="Mobile No"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:maxLength="30"
                                    android:textColorHint="@color/gray"
                                    android:textStyle="bold"
                                    tools:ignore="SpeakableTextPresentCheck"/>

                            </com.google.android.material.textfield.TextInputLayout>


                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp"/>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/txtinput3"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:textColorHint="@color/gray"
                                app:boxStrokeColor="@color/baccup"
                                app:startIconDrawable="@drawable/email"
                                app:startIconTint="@color/baccup">

                                <EditText
                                    android:id="@+id/mail02"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:hint="E-mail"
                                    android:inputType="textPersonName"
                                    android:textColor="@color/black"
                                    android:textSize="20sp"
                                    android:maxLength="30"
                                    android:textColorHint="@color/gray"
                                    android:textStyle="bold"
                                    tools:ignore="SpeakableTextPresentCheck"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <Button
                                android:id="@+id/profilebtn"
                                style="@style/btn"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:background="@drawable/filedborder"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/bluemaster"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:text="submit" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginTop="20dp">

                                <ProgressBar
                                    android:id="@+id/editprogressBar"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:visibility="gone"/>
                            </LinearLayout>




                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>