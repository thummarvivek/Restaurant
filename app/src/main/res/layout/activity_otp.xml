<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Loginpro.Otp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Submit OTP"
                android:textColor="@color/bblack"
                android:textSize="25dp"
                android:fontFamily="@font/interfont"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="240dp"
                android:gravity="center"
                android:layout_marginTop="170dp"
                android:backgroundTint="#fff"
                app:cardCornerRadius="30dp"
                android:elevation="50dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:weightSum="4"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/settotp"
                            style="@style/edittext"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/filedbordertext"
                            android:layout_weight="1"
                            android:hint="OTP"
                            android:inputType="phone" />



                        <Button
                            android:id="@+id/ssetotpbtn"
                            style="@style/btn"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/filedborder"
                            android:text="Confirm Otp"
                            android:layout_weight="1"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/reotp"
                            android:textColor="#808080"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="right"
                            android:layout_marginRight="10dp"
                            android:text="Resend Otp"
                            android:textSize="17sp" />


                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>